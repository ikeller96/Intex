@model IEnumerable<IntexAzure.Models.Assays>

@{
    ViewBag.Title = "WorkOrderAssays";
}


@{
    Layout = null;
}
<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>WelcomeCustomer</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
</head>

<body>
    <div class="navbar navbar-inverse navbar-fixed-top">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                @Html.ActionLink("Application name", "Index", "Home", new { area = "" }, new { @class = "navbar-brand" })
            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav">
                    <li>@Html.ActionLink("Home", "Index", "Home")</li>
                    <li>@Html.ActionLink("About", "About", "Home")</li>
                    <li>@Html.ActionLink("Contact", "Contact", "Home")</li>
                    <li>@Html.ActionLink("My Work Orders", "MyWorkOrders", "Home")</li>

                    <li>@Html.ActionLink("Login", "Login", "Home")</li>
                    <li>@Html.ActionLink("SignUp", "SignUp", "Home")</li>

                </ul>
            </div>
        </div>
    </div>

    <div class="container body-content">

        <h2>WorkOrderAssays</h2>


        <table class="table">
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.WorkOrders.OrderRushed)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.AssayStatus)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.AssayTypeID)
                </th>
                <th></th>
            </tr>

            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.WorkOrders.OrderRushed)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.AssayStatus)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.AssayTypeID)
                    </td>
                    <td>
                        @Html.ActionLink("Tests", "AssayTests", new { id = item.AssayID })
                    </td>
                </tr>
            }

        </table>

        </div>
</body>
</html>