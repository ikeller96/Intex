
@{
    Layout = null;
}
<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>WelcomeCustomer</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
</head>

<body>
    <div class="navbar navbar-inverse navbar-fixed-top">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                @Html.ActionLink("Application name", "Index", "Home", new { area = "" }, new { @class = "navbar-brand" })
            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav">
                    <li>@Html.ActionLink("Home", "Index", "Home")</li>
                    <li>@Html.ActionLink("About", "About", "Home")</li>
                    <li>@Html.ActionLink("Contact", "Contact", "Home")</li>
                    <li>@Html.ActionLink("My Work Orders", "MyWorkOrders", "Home")</li>

                    <li>@Html.ActionLink("Login", "Login", "Home")</li>
                    <li>@Html.ActionLink("SignUp", "SignUp", "Home")</li>

                </ul>
            </div>
        </div>
    </div>

    <div class="container body-content">

        <div class="jumbotron">
            <h1>Welcome @ViewBag.Name</h1>
            <p class="lead">Use this portal to view the status or results of your work orders or place a new order!</p>
            <p><a href=@Url.Action("MyWorkOrders", "Home") class="btn btn-primary btn-lg">View My Work Orders &raquo;</a></p>
            <p><a href=@Url.Action("NewWorkOrder", "Home", new { id = ViewBag.CustID}) class="btn btn-primary btn-lg">Place an Order &raquo;</a></p>
        </div>

        <div class="row">
            <div class="col-md-4">
                <h2>Getting started</h2>
                <p>
                    NorthWest Labs performs tests on various compounds for clients. Clients may place orders online and track the status of those orders through an intuitive interface.
                </p>
                <p><a class="btn btn-default" href="https://go.microsoft.com/fwlink/?LinkId=301865">Learn more &raquo;</a></p>
            </div>

        </div>

    </div>

</body>
</html>
