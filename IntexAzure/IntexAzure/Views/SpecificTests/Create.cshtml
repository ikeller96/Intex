@model IntexAzure.Models.SpecificTests

@{
    ViewBag.Title = "Create";
}
<ul class="breadcrumb">
    <li><a href="@Url.Action("Index", "Customers")">Customers</a></li>
    <li><a href="@Url.Action("Index", "WorkOrders")">Work Orders</a></li>
    <li><a href="@Url.Action("Index", "Assays")">Assays</a></li>
