            @Html.EditorFor(model => model.TestTypeID, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.TestTypeID, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        @Html.LabelFor(model => model.QuantitativeResults, htmlAttributes: new { @class = "control-label col-md-2" })
